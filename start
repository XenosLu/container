#!/bin/sh
test -e /tmp/.X11-unix/X0 || /usr/bin/X :0 &
test -f /var/run/dbus/pid && rm /var/run/dbus/pid

export DISPLAY=:0.0
echo starting dbus...
/usr/bin/dbus-daemon --system
echo starting x0vnc...
x0vncserver display=':0.0' -securitytypes none &
echo starting novnc...
websockify --web /usr/share/novnc 9000 localhost:5900 &
echo starting kodi...
/usr/bin/kodi
